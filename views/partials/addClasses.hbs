<section class="ui modal" id="addClass"> <i class="close icon"></i>
  <header class="header">Add Class</header>
  <div class="content">
    <form class="ui segment form" action="/classes/addclass" method="POST">
      <div class="three fields">
        <div class="field">
          <label>Class Name</label>
          <div class="ui input left icon">
            <i class="table icon"></i>
            <input placeholder="Class Name" type="text" name="name">
          </div>
        </div>
        <div class="field">
          <label>Difficulty</label>
          <div class="ui selection dropdown">
            <i class="line chart icon"></i>
            <input type="hidden" name="difficulty">
            <i class="dropdown icon"></i>
            <div class="default text">Difficulty</div>
            <div class="menu">
              <div class="item" data-value="Beginner">Beginner</div>
              <div class="item" data-value="Intermediate">Intermediate</div>
              <div class="item" data-value="Advanced">Advanced</div>
            </div>
          </div>
        </div>
        <div class="field">
          <label>Duration</label>
          <div class="ui input left icon">
            <i class="hourglass half icon"></i>
            <input placeholder="Duration (mins)" type="text" name="duration">
          </div>
        </div>
      </div>
      <div class="field">
        <label>Description</label>
        <textarea placeholder="Description" name="description" rows="2"></textarea>
      </div>
      <div class="field">
        <label>Image Url</label>
        <div class="ui input left icon">
          <i class="image icon"></i>
          <input placeholder="Image Url" type="text" name="image">
        </div>
      </div>
      <button class="ui blue submit button"><i class="plus icon"></i> Add Class </button>
    </form>
  </div>
</section>