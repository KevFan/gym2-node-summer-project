<form class="ui segment form" action="/goals/addgoal/{{user.id}}" method="POST">
  <section class="three fields">
    <div class="field">
      <label>Weight</label>
      <input placeholder="00.00kg" type="text" name="weight">
    </div>
    <div class="field">
      <label>Chest</label>
      <input placeholder="00.00cm" type="text" name="chest">
    </div>
    <div class="field">
      <label>Thigh</label>
      <input placeholder="00.00cm" type="text" name="thigh">
    </div>
  </section>
    <section class="three fields">
      <div class="field">
        <label>Upper Arm</label>
        <input placeholder="00.00cm" type="text" name="upperArm">
      </div>
      <div class="field">
        <label>Waist</label>
        <input placeholder="00.00cm" type="text" name="waist">
      </div>
      <div class="field">
        <label>Hips</label>
        <input placeholder="00.00cm" type="text" name="hips">
      </div>
    </section>
  <section class="two fields">
    <div class="field">
      <label>Description</label>
      <input placeholder="Description" name="description">
    </div>
    <section class="field calender" id="dateOnly">
      <label>Achieve by Date</label>
      <div class="ui input left icon">
        <i class="calendar icon"></i>
        <input placeholder="Date" type="text" name="dateOnly">
      </div>
    </section>
  </section>
    <button class="ui blue submit button"> Add Goal </button>
</form>

<script>
  $('#dateOnly').calendar({
    type: 'date'
  });
</script>