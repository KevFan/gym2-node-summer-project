<section class="ui modal" id="addAssessment{{#if id}}{{id}}{{/if}}"> <i class="close icon"></i>
  <header class="header">Add Assessment for {{userName}} {{user.name}} {{name}}</header>
  <div class="content">
    <form class="ui segment form" action="/assessments/addassessment/{{#if user.id}}{{user.id}}{{else if userid}}{{userid}}{{else}}{{id}}{{/if}}" method="POST">
      <section class="three fields">
        <div class="field">
          <label>Weight</label>
          <input placeholder="00.00kg" type="text" name="weight">
        </div>
        <div class="field">
          <label>Chest</label>
          <input placeholder="00.00cm" type="text" name="chest">
        </div>
        <div class="field">
          <label>Thigh</label>
          <input placeholder="00.00cm" type="text" name="thigh">
        </div>
      </section>
      <section class="three fields">
        <div class="field">
          <label>Upper Arm</label>
          <input placeholder="00.00cm" type="text" name="upperArm">
        </div>
        <div class="field">
          <label>Waist</label>
          <input placeholder="00.00cm" type="text" name="waist">
        </div>
        <div class="field">
          <label>Hips</label>
          <input placeholder="00.00cm" type="text" name="hips">
        </div>
      </section>
      <section class="field">
        <label>Comment</label>
        <textarea placeholder="Comment" name="comment" rows="1"></textarea>
      </section>
      <button class="ui blue submit button"> Add Assessment </button>
    </form>
  </div>
</section>