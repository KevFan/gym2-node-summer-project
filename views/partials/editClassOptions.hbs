<section class="center aligned content">
  <div class="ui teal buttons">
    <div class="ui button"><i class="options icon"></i>Options</div>
    <div class="ui floating dropdown icon button">
      <i class="dropdown icon"></i>
      <div class="menu">
        <div class="item" data-modal="{{id}}"><i class="blue edit icon"></i> Edit Details</div>
        <section class="ui modal" id="{{id}}"> <i class="close icon"></i>
          <header class="header">{{name}}</header>
          <div class="content">
            <form class="ui segment form" action="/classes/{{id}}" method="POST">
              <div class="three fields">
                <section class="field">
                  <label>Class Name</label>
                  <div class="ui input left icon">
                    <i class="table icon"></i>
                    <input placeholder="Class Name" type="text" name="name" value="{{name}}">
                  </div>
                </section>
                <section class="field">
                  <label>Difficulty</label>
                  <div class="ui selection dropdown">
                    <input type="hidden" name="difficulty" value="{{difficulty}}">
                    <i class="line chart icon"></i>
                    <i class="dropdown icon"></i>
                    <div class="default text">Difficulty</div>
                    <div class="menu">
                      <div class="item" data-value="Beginner">Beginner</div>
                      <div class="item" data-value="Intermediate">Intermediate</div>
                      <div class="item" data-value="Advanced">Advanced</div>
                    </div>
                  </div>
                </section>
                <section class="field">
                  <label>Duration</label>
                  <div class="ui input left icon">
                    <i class="hourglass half icon"></i>
                    <input placeholder="Duration (mins)" type="text" name="duration" value="{{duration}}">
                  </div>
                </section>
              </div>
              <section class="field">
                <label>Description</label>
                <textarea placeholder="Description" name="description" rows="2">{{description}}</textarea>
              </section>
              <section class="field">
                <label>Image Url</label>
                <div class="ui input left icon">
                  <i class="image icon"></i>
                  <input placeholder="Image Url" type="text" name="image" value="{{image}}">
                </div>
              </section>
              <button class="ui blue submit button"><i class="save icon"></i> Edit Class </button>
            </form>
          </div>
        </section>

        <a class="item" href="/trainerDashboard/classes/delete/{{id}}" >
          <i class="red delete icon"></i> Delete Class
        </a>
        <a class="item" href="/trainerDashboard/classes/hideOrUnhide/{{id}}">
          {{#if hidden}}
            <i class="green unhide icon"></i> Unhide Class
          {{else}}
            <i class="red hide icon"></i> Hide Class
          {{/if}}
        </a>
      </div>
    </div>
  </div>
</section>