<table class="ui table">
  <thead>
  <tr>
    <th>Location</th>
    <th>Date/Time</th>
    <th>Capacity</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  {{#each classes.sessions}}
    <tr>
      <td>
        {{location}}
      </td>
      <td>
        {{dateTime}}
      </td>
      <td>
        {{capacity}}
      </td>
      {{#if ../isTrainer}}
        <td>
          <a href="/classes/{{../classes.id}}/deletesession/{{id}}" class="ui icon button">
            <i class="icon trash"></i>
          </a>
        </td>
      {{else}}
        <td>
          <form action="/classes/{{../classes.id}}/enroll/{{id}}" method="POST">
            <button class="ui blue submit button"> Enroll </button>
          </form>
        </td>
        <td>
          <a href="/classes/{{../classes.id}}/unEnroll/{{id}}">
            <button class="ui red submit button"> Unenroll </button>
          </a>
        </td>
      {{/if}}
    </tr>
  {{/each}}
  </tbody>
</table>