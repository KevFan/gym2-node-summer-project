<table class="ui table">
  <thead>
  <tr>
    <th>Location</th>
    <th>Date</th>
    <th>Time</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  {{#each classes.sessions}}
    <tr>
      <td>
        {{location}}
      </td>
      <td>
        {{date}}
      </td>
      <td>
        {{time}}
      </td>
      {{#if ../isTrainer}}
        <td>
          <a href="/classes/{{../classes.id}}/deletesession/{{id}}" class="ui icon button">
            <i class="icon trash"></i>
          </a>
        </td>
      {{/if}}
    </tr>
  {{/each}}
  </tbody>
</table>