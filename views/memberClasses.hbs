{{> menu id="dashboard"}}
<form class="ui center aligned search basic segment form" action="/search/class" method="POST">
  <div class="ui left icon input field">
    <i class="search icon"></i>
    <input class="prompt" placeholder="Class Name" name="search">
  </div>
</form>

<div class="ui container">
  <div class="ui centered four doubling stackable cards">
    {{#each classes}}
      <div class="ui link card">
        {{> listClasses}}
      </div>
    {{/each}}
  </div>
</div>
